<!DOCTYPE import-control PUBLIC
        "-//Puppy Crawl//DTD Import Control 1.1//EN"
        "http://www.puppycrawl.com/dtds/import_control_1_1.dtd">

<import-control pkg="uk.co.thefishlive">
    <allow pkg="java"/>
    <allow pkg="javax"/>
    <allow pkg="org.junit"/>
    <allow pkg="org.hamcrest"/>
    <allow pkg="org.mockito"/>
    <allow pkg="com.google.common"/>
    <allow pkg="gnu.trove"/>
    <allow pkg="com.google.gson"/>
    <allow pkg="uk.co.thefishlive"/>

    <subpackage name="auth">
        <disallow pkg="uk.co.thefishlive.http"/>
        <disallow pkg="uk.co.thefishlive.meteor"/>
    </subpackage>

    <subpackage name="http">
    </subpackage>

    <subpackage name="meteor">
        <allow pkg="uk.co.thefishlive.http"/>
        <allow pkg="uk.co.thefishlive.auth"/>
    </subpackage>
</import-control>